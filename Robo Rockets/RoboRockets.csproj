<Project Sdk="Microsoft.NET.Sdk">
 
	<!-- General Package Properties -->
  <PropertyGroup>
    <PackageId>RoboRockets</PackageId>
    <Version>4.2.1</Version>
    <Authors>Sgt_Imalas</Authors>
    <Copyright>2022-2023 Sgt_Imalas</Copyright>
    <RepositoryUrl>https://github.com/Knastoron/Knastoron-Oni-Mods</RepositoryUrl>
  </PropertyGroup>

	<!-- Build Properties -->
	<PropertyGroup>
		<TargetFramework>net471</TargetFramework>
		<Configurations>Debug;Release</Configurations>
		<AssemblyName>RoboRockets</AssemblyName>
		<RootNamespace>RoboRockets</RootNamespace>
		<IsMod>true</IsMod>
		<GenerateMetadata>true</GenerateMetadata>
		<IsPacked>true</IsPacked>
	</PropertyGroup>
	
	
	<!-- Mod Info AI Controlled Rockets-->
	<PropertyGroup>
		<ModName>AI Controlled Rockets</ModName>
		<ModDescription>Adds in 3 Control Modules that allows Rockets to fly without a Pilot</ModDescription>
		<SupportedContent>EXPANSION1_ID</SupportedContent>
		<MinimumSupportedBuild>561558</MinimumSupportedBuild>
		<APIVersion>2</APIVersion>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<OutDir>bin</OutDir>
		<OutputPath></OutputPath>
		<DocumentationFile></DocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	  <OutDir>bin</OutDir>
	  <OutputPath />
	  <DocumentationFile />
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release2|AnyCPU'">
	  <OutDir>bin</OutDir>
	  <OutputPath />
	  <DocumentationFile />
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<OutDir>bin</OutDir>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Properties\**" />
	  <EmbeddedResource Remove="Properties\**" />
	  <None Remove="Properties\**" />
	</ItemGroup>

	<ItemGroup>

		<PackageReference Include="Aze.Publicise.MSBuild.Task" Version="1.1.0">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>

		<PackageReference Include="PLib" Version="4.13.0">
			<Private>false</Private>
		</PackageReference>
	</ItemGroup>
	
